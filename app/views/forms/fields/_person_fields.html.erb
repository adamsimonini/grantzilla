<div class="nested-fields">
  <%= f.input :first_name, required: true %>
  <%= f.input :last_name, required: true %>
  <%= f.input :birth_date, start_year: (Date.today - 120.years).year, order: [:month, :day, :year], required: true %>
  <%= f.input :phone %>
  <%= f.input :email %>

  <div class="row">
    <div class="col-sm-4">
      <%= f.input :veteran %>
    </div>

    <div class="col-sm-4">
      <%= f.input :student %>
    </div>

    <div class="col-sm-4">
      <%= f.input :full_time_student %>
    </div>
  </div>

  <%= link_to_remove_association f, class: 'btn btn-danger' do %>
    <i class="glyphicon glyphicon-minus"></i>
    Remove
  <% end %>

  <hr/>
</div>
