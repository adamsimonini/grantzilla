<h1>Grant Applications</h1>

<% if @grants %>
  <table class="table table-striped">
    <thead>
      <th>EHF#</th>
      <th>Applicants</th>
      <th>Application Date</th>
      <th>Agency</th>
      <th>Case Worker</th>
      <th>Status</th>
      <th></th>
    </thead>
    <% @grants.each do |grant| %>
      <tr>
        <td><%= grant.id %></td>
        <td>
          <% grant.people.each do |person| %>
            <div><%= person.first_name %> <%= person.last_name %></div>
          <% end %>
        </td>
        <td><%= grant.application_date %></td>
        <td><%= grant.agency_name %></td>
        <td><%= grant.case_worker_name %></td>
        <td><%= grant.status_name %></td>
        <td>
          <%= link_to grant, class: "btn btn-small btn-default" do %>
            <span class="glyphicon glyphicon-pencil"></span> Edit
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <p>
    <a href="<%= new_grant_path %>" class="btn btn-primary">
      <span class="glyphicon glyphicon-plus"></span> New Application
    </a>
  </p>
<% else %>
  <div class="alert alert-warning">
    No applications have been submitted yet. <%= link_to '<span class="glyphicon glyphicon-plus"></span> New Application'.html_safe, new_grant_path, class: 'btn btn-default' %>
  </div>
<% end %>
